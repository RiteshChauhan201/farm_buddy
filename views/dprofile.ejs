<!DOCTYPE html>
<html>
<head>
  <title>User Profile</title>
  <style>
    /* Add CSS to center the page content */
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: auto;
      margin: 0;
      flex-direction: column;
      background-color: rgb(226, 226, 211);
    }
    p{
      display: block;
  font-weight: bold;
  margin-top: 10px;
    }
    form{
      display: flex;
      flex-direction: column;
      width: 600px;
      border: 1px solid black;
      padding: 30px ;
      margin: 20px;
      min-height: 1000px;
      justify-content: space-evenly;
      font-size: 1.3em;
      overflow: scroll;
    }
    label {
  display: block;
  font-weight: bold;
  margin-top: 10px;
}

input[type="text"], input[type="email"], input[type="password"] {
  width: 100%;
  padding: 10px;
  margin-top: 5px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
  font-size: 16px;
  font-family: 'Roboto', sans-serif;
  background-color: rgb(211, 211, 197);
}
textarea{
  min-height: 100px;
  /* height: auto; */
  width: auto;
  background-color: rgb(211, 211, 197);
  
}
input[type="file"] {
  margin-top: 10px;
}

input[type="submit"], button {
  background-color: #2ecc71;
  border: none;
  color: #fff;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 16px;
  font-family: 'Roboto', sans-serif;
  cursor: pointer;
  width: 30%;
  justify-self: flex-end;
}

input[type="submit"]:hover, button:hover {
  background-color: #27ae60;
}
h1{
  text-transform: uppercase;
  font-weight: bolder;
  
}

  </style>
</head>
<body>

    <%- include("partials/dealernavbar"); -%>
   
     
   
  <% if (typeof profile !== 'undefined') { %>
    <h1>Profile</h1>
    <form action="/dprofile" method="post" >
      <label for="first_name">First Name:</label>
      <input type="text" id="first_name" name="first_name" value="<%= profile.first_name %>" required>
      <label for="last_name">Last Name:</label>
      <input type="text" id="last_name" name="last_name" value="<%= profile.last_name %>" >
      <p>Phone Number : <%= profile.phone %></p>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" value="<%= profile.email %>">
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" value="<%= profile.password %>"required>
      <label for="bio">Bio:</label>
      <textarea id="bio" name="bio" ><%= profile.bio %></textarea>
      <label for="house_number">House Number:</label>
      <input type="text" id="house_number" name="house_number" value="<%= profile.house_number %>">
      <label for="street">Street:</label>
      <input type="text" id="street" name="street" value="<%= profile.street %>">
      <label for="city">City:</label>
      <input type="text" id="city" name="city" value="<%= profile.city %>">
      <label for="state">State:</label>
      <input type="text" id="state" name="state" value="<%= profile.state %>">
      <label for="country">Country:</label>
      <input type="text" id="country" name="country" value="<%= profile.country %>">
      <label for="zip_code">Zip Code:</label>
      <input type="text" id="zip_code" name="zip_code" value="<%= profile.zip_code %>">
      <button type="submit">Save</button>
    </form>
  <% } else { %>
    <h1>Profile </h1>
    <form action="/dprofile" method="post" >
      <label for="first_name">First Name:</label>
      <input type="text" id="first_name" name="first_name" value="<%=user.first_name%>" required>
      <label for="last_name">Last Name:</label>
      <input type="text" id="last_name" name="last_name" value="<%=user.last_name%>" >
      <P>Phone Number : <%= user.phone %></P>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" value="<%=user.email%>" >
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" value="<%=user.password%>" required>
      <label for="bio">Bio:</label>
      <textarea id="bio" name="bio"></textarea>
      <label for="house_number">House Number:</label>
      <input type="text" id="house_number" name="house_number">
      <label for="street">Street:</label>
      <input type="text" id="street" name="street">
      <label for="city">City:</label>
      <input type="text" id="city" name="city">
      <label for="state">State:</label>
      <input type="text" id="state" name="state">
      <label for="country">Country:</label>
      <input type="text" id="country" name="country">
      <label for="zip_code">Zip Code:</label>
      <input type="text" id="zip_code" name="zip_code">
      <button type="submit">Save</button>
    </form>
  <% } %>
</body>
</html>
